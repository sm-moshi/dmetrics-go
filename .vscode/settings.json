{
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "[go.mod]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    // gopls
    "go.useLanguageServer": true,
    "gopls": {
        "formatting.local": "github.com/sm-moshi/dmetrics-go",
        "formatting.gofumpt": true
    },
    // golangci-lint  
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "[go][go.mod]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "debug.javascript.defaultRuntimeExecutable": {
        "pwa-node": "${workspaceFolder}/.vscode/mise-tools/node"
    },
    "go.goroot": "${workspaceFolder}/.vscode/mise-tools/goRoot",
    "python.defaultInterpreterPath": "${workspaceFolder}/.vscode/mise-tools/python",
    "go.alternateTools": {
        "go": "${workspaceFolder}/.vscode/mise-tools/go",
        "dlv": "${workspaceFolder}/.vscode/mise-tools/dlv"
    }
}
